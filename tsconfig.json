{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2019",
    "module":"ESNext",
    "lib": ["dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "declarationDir": "dist",
    "outDir": "dist",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "tests/**/*",
    "src/setup/jest.ts"
  ]
}
