{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2015",
    "module":"ESNext",
    "lib": ["dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "declarationDir": "lib",
    "outDir": "lib",
    "plugins": [
      {
        "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
        "after": true,
      },
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "tests/**/*",
    "src/setup/node.ts"
  ]
}
